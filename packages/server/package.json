{
  "name": "arc-mcp-server",
  "version": "2.0.0",
  "description": "MCP server providing Node.js REPL for Arc browser automation",
  "author": "Andrew Gazelka",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "arc-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@arc-mcp/browser": "*",
    "@modelcontextprotocol/sdk": "^1.24.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0",
    "typescript": "^5.7.2"
  }
}
